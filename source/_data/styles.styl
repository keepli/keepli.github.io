//文本背景
body {
    background:url(/images/add/background-body2.jpg);
    background-repeat: no-repeat;
    background-attachment:fixed; //当页面的其余部分滚动时，背景图像不会移动
    background-size: cover;      //填充
    background-position:50% 50%;
}


//博客内容透明化
//文章内容的透明度设置
.content-wrap {
  opacity: 0.85;
}

//侧边框的透明度设置
.sidebar {
  opacity: 0.85;
}

//菜单栏的透明度设置
.header-inner {
  background: rgba(255,255,255,0.85);
}

//搜索框（local-search）的透明度设置
.popup {
  opacity: 0.85;
}


// 鼠标样式
* {
    cursor: url(/images/add/1.cur),auto!important
}
:active {
    cursor: url(/images/add/2.cur),auto!important
}


// 美化圆角设置的，如果使用Muse和Mist主题时需要注释掉，否则侧边栏会直接变成透明
.sidebar {
    box-shadow: none; //去掉原有边框
    background: none; //去掉原有背景
}


//替换主页背景
.site-brand-container {
    background-image:url(/images/add/background-home.jpg);
    background-repeat: no-repeat; //不重复
    background-size: cover;      //填充
}

//修改文本超链接颜色 （主题配置文件中有添加相关配置）
if hexo-config("custom_css.post_body_a.enable")
  .post-body 
    a:not(.btn){
      color: convert(hexo-config("custom_css.post_body_a.normal_color"));
      border-bottom: none;
      &:hover {
        color: convert(hexo-config("custom_css.post_body_a.hover_color"));
        text-decoration: underline;
      }
    }


