//解决文章内容显示问题，自适应屏幕

//头
.header {
  width: 90%; /* 调节的是主题栏两边的留白 */

  +tablet-mobile() {
    width: auto;
  }
}

//内容
.content-wrap {
  width: calc(100% - 260px);/* 100%不要动，后面的px是调节两个模块直接的留白 */

  +tablet-mobile() {
    width: 100%;
  }
}

//内边距
.main-inner {
  width: 90%; /* 调节的内容栏两边的留白 */
  
  +tablet-mobile() {
    width: auto;
  }
}

